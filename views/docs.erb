<section id="docs" class="content">
  <div class="vessel">
    <div id="nav-bg"></div>
    
    <aside>
      <nav id="docs-nav">
        <% $docs.sections.each do |section| %>
          <div class="section">
            <h3><%= section.title %></h3>
            <ul>
              <% section.each do |page| %>
                <li><a href="/docs/<%= page.slug %>/"><%= page.title %></a></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </nav>
      <div class="clearfix"></div>
    </aside>

    <div id="article-wrap">
      <article id="docs-content">
        <%= @content %>
      </article>
    </div>                 
    <div class="clearfix"></div>
  </div>
</section>
