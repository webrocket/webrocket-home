              <div class="signup_field">
                <input type="text" name="signup_email" id="signup_email" />
                <input type="submit" id="submit_signup" name="submit_signup" value="Signup!" />
                <div class="clearfix"></div>
              </div>
              <div class="signup_loading" style="display: none;">
